<h1>Your tasks</h1>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<%= link_to "Back to list", tasks_path %>
<p><%= link_to "Edit a task", edit_task_path(@task.id)  %></p>
<%= link_to "Delete #{@task.title}", task_path(@task), method: :delete,
data: { confirm: "Are you sure?"} %>
